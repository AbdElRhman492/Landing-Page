//- Mixin To Make Input Wrapper
mixin input-wrapper(label, type, name, placeholder)
  .input-wrapper 
    label(for=name class='input-label') #{label} *
    input(type=type name=name id=name class='input-field' placeholder='Type ' + placeholder )

